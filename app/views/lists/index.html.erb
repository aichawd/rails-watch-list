<div class="banner indexlists text-center">
    <h1 class="my-3">Your Movie lists</h1>
    <p> <%= link_to 'Create a new list', new_list_path, class: "btn btn-primary" %> </p>
</div>

<div class="container">

  <h2 class="my-3 text-center">Lists</h2>

  <div class="row">
    <% @lists.each do |list| %>
      <div class="list-card text-center mt-3 col-lg-4 col-md-6 col-sm-4 my-3"> <%= link_to list.name, list_path(list), class: "list-name" %> </div>
    <% end %>
  </div>

</div>
