<div class="container">
  <h1> <%= @list.name %> </h1>

  <p> <%= link_to 'Add Bookmark', new_list_bookmark_path(@list)  %> </p>

  <ul>
    <% @bookmarks.each do |bookmark| %>
      <li>
        <% movie = Movie.find[bookmark.movie_id] %>
        <%= movie.title %>
        <%= image_tag movie.poster_url %>
        <%= bookmark.comment %>
        <%= link_to "Remove",
                  bookmark_path(bookmark),
                  method: :delete,
                  data: { confirm: "Are you sure you want to delete this bookmark?" }%>
      </li>
    <% end %>
  </ul>

  <p> <%= link_to 'Back to lists', lists_path %> </p>
</div>
