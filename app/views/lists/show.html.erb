<div class="container">
  <h1> <%= @list.name %> </h1>

  <p> <%= link_to 'Add Bookmark', new_list_bookmark_path(@list)  %> </p>
  <%= cl_image_tag @list.photo.key, height: 300, width: 400, crop: :fill %>

  <ul>
    <% @bookmarks.each do |bookmark| %>
      <li>
        <%= bookmark.movie.title %> <br>
        <%= image_tag bookmark.movie.poster_url, width: '200' %> <br>
        <%= bookmark.comment %>
        <%= link_to "Remove",
                  bookmark_path(bookmark),
                  method: :delete,
                  data: { confirm: "Are you sure you want to delete this bookmark?" }%>
      </li>
    <% end %>
  </ul>

  <p> <%= link_to 'Back to lists', root_path %> </p>
</div>
